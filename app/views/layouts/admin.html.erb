<!DOCTYPE html>
<html>
<head>
  <title>FractalProject</title>
  <%= stylesheet_link_tag    "bootstrap_and_overrides", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">Fractal</a>
          <div class="nav-collapse collapse">
          	<p class="navbar-text pull-left">
              <%= link_to image_tag('pt.png'), url_for( :locale => 'pt-BR' ), :title => "PortuguÃªs" %>
              <%= link_to image_tag('en.png'), url_for( :locale => 'en' ), :title => "English" %>
            </p>
            
            <% if current_admin %>

		          <div class="btn-group pull-right">
		            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
		              <i class="icon-user"></i> <%= current_admin.email %>
		              <span class="caret"></span>
		            </a>
	            
		            <ul class="dropdown-menu">
		              <li><%= link_to "Minha Conta", edit_admin_registration_path %></li>
		              <li class="divider"></li>
		              <li><%= link_to "Sair", destroy_admin_session_path, method: :delete %></li>
		            </ul>
		          </div>
	          <% end %>

	        

            <ul class="nav">
              <li><a href="#">Home</a></li>
              <li><a href="#about">About</a></li>
              <li><a href="#contact">Contact</a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span3">
          <div class="well sidebar-nav">
            <ul class="nav nav-list">
                <%= yield :sidebar %>
            </ul>
          </div><!--/.well -->
        </div><!--/span-->

      <%= yield %>
      
    </div><!--/.fluid-container-->

    <footer>
        <center><p><%= t('opensource') %> <%= link_to 'open-source', 'http://github.com/igorportela', target: 'blank' %> &copy; 2012 - <%= Time.now.year%>. <%= t('footer') %>.</p></center>
    </footer>


</body>
</html>